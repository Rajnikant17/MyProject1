<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rajnikantpandey.loginpage.FourthActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADDRESS"
        android:textSize="30sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10sp"></View>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="30sp"
        android:inputType="text"
        android:id="@+id/id1"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobilen-no"
        android:id="@+id/id2"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adddress"
        android:id="@+id/id3"
        android:inputType="text"/>
    <TextView
        android:id="@+id/id4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Township"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5sp"></View>
    <TextView
        android:id="@+id/id5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="822112"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="250sp"></View>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff0000"
        android:text="Save"
        android:onClick="click"
        android:textSize="20sp"/>

</LinearLayout>
